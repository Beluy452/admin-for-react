extends ../layout

block content
    .content
        h2.title-page Text
        form.text-page(method="post" action="/api/projects-text")
            input.title(type="text" name="title" value=projectsText[0].title autocomplete="off" placeholder="title")
            input.title(type="text" name="sub-title" value=projectsText[0]["sub-title"] autocomplete="off" placeholder="sub-title")
            textarea.description(name="description"  autocomplete="off")=projectsText[0].description
            button.add-user(type="submit") Save
        div=errors
