extends ../layout

block content
    .content
        h2.title-page Text
        form.text-page(method="post" action="/api/users-text")
            input.title(type="text" name="title" value=usersText[0].title autocomplete="off" placeholder="title")
            input.title(type="text" name="sub-title" value=usersText[0]["sub-title"] autocomplete="off" placeholder="sub-title")
            textarea.user-description-textarea(name="description"  autocomplete="off")=usersText[0].description
            button.add-user(type="submit") Save
        div=errors
