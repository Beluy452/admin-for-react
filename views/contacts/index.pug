extends ../layout
block content
	.content
		h2.title-page Contacts

		.contacts

			each contact, index in contacts

				form.contact-container(method="post" enctype="multipart/form-data" action="/api/contacts")

					.index=index + 1

		button.add-user.show-modal-form add new project

	.modal-form
		button.close-modal.show-modal-form close
		form.submit-form.send-message(method="post" name="send" enctype="multipart/form-data" action="#")
			.flex-container
				.input-container
					input(type="text", name="name", placeholder="name")
				.input-container
					input(type="email", name="email" placeholder="email")
				.input-container
					textarea(name="description")
			.button-container
				button(type="submit") Save
				button(type="reset") Reset

	div=errors
