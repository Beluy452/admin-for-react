*
  padding 0
  margin 0
  box-sizing border-box

body,html
  font 14px "Roboto", sans-serif
  background-color #333333
a
  color #00B7FF

li
  list-style none

::-webkit-scrollbar {
  width: 6px
}

::-webkit-scrollbar-track {
  border 2px solid #333333
}

::-webkit-scrollbar-thumb {
  background-color #333333

}

.wrapper
  padding 100px 95px 0 0
  display flex

.content
  background-color #3b3b3b
  width 100%
  padding 50px 15px 30px 0
  box-shadow 0 0 8px 0 rgba(35, 35, 35, 0.3)
  position relative

.title-page
  font-size 140px
  text-transform uppercase
  font-weight bold
  position absolute
  right 0
  top -120px
  color rgba(255, 255, 255, 0.1)

.global-menu
  width 230px
  flex-shrink 0
  display flex
  align-items center
  flex-direction column

  .menu-item
    &.active,
    &:hover
      background-color #3b3b3b

      .link-menu
        color #fff

    transition background-color .3s
    width 100%

.link-menu
  transition color .3s
  text-transform uppercase
  font-weight 500
  font-size 16px
  color #5f5f5f
  text-decoration none
  width 100%
  display flex
  align-items center
  justify-content center
  height 55px


.logo-container
  margin-top -70px
  margin-bottom 65px
  color #fff

.logo
  margin auto
  width 75px
  display block

.description-logo
  text-transform uppercase
  font-weight bold

form
  max-width 500px
  margin auto

  .flex-container
    display flex
    flex-wrap wrap
    justify-content space-between

  .button-container
    margin-top 25px
    display flex

  input,button,textarea
    border none
    background transparent
    cursor pointer
    outline none

  input[type="text"]
    border-bottom 1px solid #ddd
    padding 10px 10px
    text-transform capitalize
    width 100%
    box-sizing border-box

  input[type="file"]
    align-self flex-end

  .input-container
    width 48%
    margin-bottom 5px
    display flex
    align-items center

  button[type="submit"]
    background-color #488011
    font-size 16px
    width 80px
    height 20px
    display flex
    align-items center
    justify-content center
    color #fff
    margin-right 15px

  button[type="reset"]
    margin-right 15px

  button[type="reset"],
  button[type="delete"]
    background-color red
    font-size 16px
    width 80px
    height 20px
    display flex
    align-items center
    justify-content center
    color #fff

img
  max-width 100%

.users
  max-height 650px
  overflow-y auto
  padding 3px 10px 3px 3px
  margin-bottom 40px

  .user-container
    display flex
    margin-bottom 20px
    transition box-shadow .3s

    &:hover
      box-shadow 0 0 7px 0 rgba(109, 109, 109, 0.6)

    &:last-child
      margin-bottom 0


  label,
  .title-links
    display block
    margin-bottom 10px
    color #595959
    font-weight 500
    font-size 12px

  textarea
    max-height 115px
    min-height 115px

  input,
  textarea
    color #595959
    background-color transparent
    border none
    resize none
    height 25px
    width 100%
    outline none
    font-size 14px
    font-weight 300

  .fa
    color #595959

  .left-container,
  .right-container,
  .save-change,
  .delete-element,
  .index
    flex-grow 1

  .index
    display flex
    align-items center
    justify-content center
    max-width 55px
    color #333333
    font-size 36px
    font-weight 500

    &:after
      content "."

  .right-container
    background-color #333333
    padding 30px
    box-sizing border-box
    max-width 480px

  .change-element
    background #333333 url("../img/save-icon.svg") no-repeat center
    background-size 54px

  .delete-element
    background #333333 url("../img/remove-icon.svg") no-repeat center
    background-size 54px

  .change-element,
  .delete-element
    border none
    cursor pointer
    outline none
    margin-left 1%
    max-width 150px
    width 100%
    display flex
    align-items center
    justify-content center
    flex-direction column-reverse

    .text-button
      padding-top 100px
      font-size 12px
      text-transform uppercase
      font-weight bold
      color #5f5f5f

  .left-container
    background-color #363636
    display flex

    input,
    textarea
      border-bottom 1px solid #595959
      padding-bottom 10px
      transition-duration .3s
      transition-property color, border-bottom-color

      &:hover,&:focus
        color #fff
        border-bottom-color #fff

  .user-image-container
    width 200px
    background-color #333333
    display flex
    align-items center
    justify-content center
    flex-shrink 0

  .user-img
    width 140px
    height 140px
    background-size cover

  .user-description-container
    padding 30px
    width 100%
    display flex
    flex-direction row
    align-items flex-start

  .user-name-and-position,
  .user-description
    width 100%

  .user-name-and-position
    padding-right 35px

  .user-name
    margin-bottom 40px

  .social-links
    font-style italic
    max-width 420px

    .flex-container
      display flex
      flex-wrap wrap
      align-items center
      justify-content space-between
      width 100%

  .facebook,
  .linkedin,
  .behance,
  .dribbble
    width 200px
    height 40px
    background-color #363636
    display flex
    flex-wrap nowrap
    align-items center
    justify-content center
    padding 0 1px
    box-sizing border-box
    margin-bottom 20px
    border-radius 3px

    input
      padding-left 15px

    &:hover,&:focus
      background-color #d6d6d6

  .icon
    width 37px
    height 37px
    flex-shrink 0
    display flex
    align-items center
    justify-content center
    background-color #333333

.add-user
  font-weight bold
  color #333333
  font-size 18px
  text-transform uppercase
  width 275px
  height 60px
  background-color transparent
  outline none
  cursor pointer
  border 2px dashed
  display flex
  align-items center
  justify-content center
  margin auto
  transition-property color, border-color
  transition-duration .3s

  &:hover
    border-color #ffffff
    color #fff

.modal-form
  position fixed
  bottom 10px
  left 0
  right 0
  transition transform .3s
  transform translateY(110%)

  &.active
    transform translateY(0)

  form
    box-shadow 0 0 7px 0 rgba(109,109,109,0.6)
    padding 15px
    background-color #363636
